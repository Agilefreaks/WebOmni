%section#device-block.full-block.section.device-block.light-bg
  .container
    .middle-wrap
      .middle-cell
        %header.title
          %h3 Please choose devices that you want to connect
        .device-wrap
          = image_tag 'click_to_select.png', alt: 'Click to select', id: 'device-help'
          #devices-wrapper
          .btn-wrap.center
            #device-disabled-wrap{'data-placement' => 'top', 'data-toggle' => 'tooltip', title: 'Select two devices for a custom experience'}
              %button#device-continue.btn.btn-info.toSlide{disabled: 'disabled', type: 'button'} Continue
        #usecases-wrapper

  = render partial: 'layouts/templates/devices_template'
  = render partial: 'layouts/templates/usecase_template'