%script{:type => 'text/x-handlebars-template', :id  => 'usecase-template'}
  .full-block.section.table.header-style-modifier
    .tableCell
      .animation{'data-anchor' => '{{device1}}-{{device2}}-{{event.id}}'}
        .row
          .col-xs-12.col-md-6.col-md-offset-3
            .anim-title
              %h2 {{event.displayName}}
            .anim-wrap
              <div class='edge-animation {{event.id}}_{{device1}}_{{device2}}' id='{{event.id}}_{{device1}}_{{device2}}'> </div>
              %a.btn.btn-white.btn-replay{'href' => '#'}
                %span.icon
              %a.btn.btn-white.btn-more{'href' => '#', 'data-toggle' => 'modal', 'data-target' => '#{{event.id}}_{{device1}}_{{device2}}_more'}
                %span.icon
              <script src='assets/animations/{{event.id}}_{{device1}}_{{device2}}/{{event.id}}_{{device1}}_{{device2}}_edgePreload.js' />