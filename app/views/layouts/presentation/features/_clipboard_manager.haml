%article#feature-clipboard-manager.section.section--bright.section--center-content.section--fit-viewport.feature.feature-three.js-nav-hash.js-group-animation-trigger
  .section__container
    .container
      .row
        .section__column.col-xs-12.col-sm-6.col-sm-push-6
          .feature__content
            .feature__container
              = image_tag 'features/feature-three.png', { class: 'feature-three__main', alt: 'Feature three background - Activity window', height: '470', width: '570', srcset: image_url('assets/images/features/feature-three@2x.png 2x')}
              %a.feature-three__copy-paste.wobble.js-feature-pointer{'data-feature' => 'feature-three-copy-paste', :href => '#', :title => 'Copy paste between devices'}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: 'Copy & paste pointer', data: { animation: 'scaleIn', timeout: '100' }, height: '25', width: '25' }
              %a.feature-three__smart-clippings.wobble.js-feature-pointer{'data-feature' => 'feature-three-smart-clippings', :href => '#', :title => 'Smart clippings'}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: 'Smart clippings pointer', data: { animation: 'scaleIn', timeout: '300' }, height: '25', width: '25' }
              %a.feature-three__history.wobble.js-feature-pointer{'data-feature' => 'feature-three-history', :href => '#', :title => 'History'}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: 'History pointer', data: { animation: 'scaleIn', timeout: '600' }, height: '25', width: '25' }
              %a.feature-three__manager.wobble.js-feature-pointer{'data-feature' => 'feature-three-manager', :href => '#', :title => 'Manager: delete/favorite/filter'}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: 'Manager pointer', data: { animation: 'scaleIn', timeout: '900' }, height: '25', width: '25' }
        .section__column.col-xs-12.col-sm-6.col-sm-pull-6
          %h1.section__title.feature__title Clipboard Manager across devices
          %ul.feature__list
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-copy-paste', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Copy & paste bullet', data: { animation: 'scaleIn', timeout: '100' } }
                Copy & paste between devices
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-smart-clippings', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Smart clippings bullet', data: { animation: 'scaleIn', timeout: '300' } }
                Smart clippings
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-history', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'History bullet', data: { animation: 'scaleIn', timeout: '600' } }
                History
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-manager', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Manager bullet', data: { animation: 'scaleIn', timeout: '900' } }
                Manager: delete/favorite/filter
          = render partial: 'layouts/presentation/features/buttons', locals: { feature_name: 'feature-clipboard-manager', what_else_link: 'faq' }
