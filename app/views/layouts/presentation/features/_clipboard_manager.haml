%article#feature-clipboard-manager.section.section--bright.section--center-content.section--fit-viewport.feature.feature-three.js-nav-hash.js-group-animation-trigger
  .section__container
    .container
      .row
        .section__column.col-xs-12.col-sm-6.col-sm-push-6
          .feature__content
            .feature__container
              = image_tag 'features/feature-three.png', { class: 'feature-three__main', alt: 'Feature three background - Activity window', height: '470', width: '570', srcset: "#{image_path('features/feature-three@2x.png')} x2"}
              %a.feature-three__copy-paste.wobble.js-feature-pointer{'data-feature' => 'feature-three-copy-paste', :href => '#', :title => "#{t('layout.feature.clipboard.copy')}"}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: "#{t('layout.feature.clipboard.copy')}", data: { animation: 'scaleIn', timeout: '100' }, height: '25', width: '25' }
              %a.feature-three__smart-clippings.wobble.js-feature-pointer{'data-feature' => 'feature-three-smart-clippings', :href => '#', :title => "#{t('layout.feature.clipboard.smart')}"}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: "#{t('layout.feature.clipboard.smart')}", data: { animation: 'scaleIn', timeout: '300' }, height: '25', width: '25' }
              %a.feature-three__history.wobble.js-feature-pointer{'data-feature' => 'feature-three-history', :href => '#', :title => "#{t('layout.feature.clipboard.history')}"}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: "#{t('layout.feature.clipboard.history')}", data: { animation: 'scaleIn', timeout: '600' }, height: '25', width: '25' }
              %a.feature-three__manager.wobble.js-feature-pointer{'data-feature' => 'feature-three-manager', :href => '#', :title => "#{t('layout.feature.clipboard.manage')}"}
                = image_tag 'svg/feature-pointer.svg', { class: 'js-animation-part', alt: "#{t('layout.feature.clipboard.manage')}", data: { animation: 'scaleIn', timeout: '900' }, height: '25', width: '25' }
        .section__column.col-xs-12.col-sm-6.col-sm-pull-6
          %h1.section__title.feature__title #{t('layout.feature.clipboard.title')}
          %ul.feature__list
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-copy-paste', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Copy & paste bullet', data: { animation: 'scaleIn', timeout: '100' } }
                #{t('layout.feature.clipboard.copy')}
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-smart-clippings', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Smart clippings bullet', data: { animation: 'scaleIn', timeout: '300' } }
                #{t('layout.feature.clipboard.smart')}
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-history', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'History bullet', data: { animation: 'scaleIn', timeout: '600' } }
                #{t('layout.feature.clipboard.history')}
            %li.feature__list__item
              %a.js-feature-bullet{'data-feature' => 'feature-three-manager', :href => '#'}
                = image_tag 'svg/feature-circle.svg', { class: 'feature__list__circle js-animation-part', alt: 'Manager bullet', data: { animation: 'scaleIn', timeout: '900' } }
                #{t('layout.feature.clipboard.manage')}
          = render partial: 'layouts/presentation/features/buttons', locals: { feature_name: 'feature-clipboard-manager', what_else_link: 'faq', what_else_text: t('layout.button.what_else') }
