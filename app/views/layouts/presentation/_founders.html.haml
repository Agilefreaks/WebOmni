%article#founders.section.founders
  .section__container
    .container
      .row
        .col-xs-12.col-sm-5.col-sm-offset-1.col-md-5.col-md-offset-2.col-lg-4.col-lg-offset-3
          .founders__left
            .founders__picture
              %img{:alt => 'Alexandru Calinoiu', :height => '85', :src => image_path('common/profile-calin.png'), :width => '85'}
            .founders__contact
              %h3.founders__name Alex
              %span.founders__title Co-founder/developer
              %br
              - if user_signed_in?
                = link_to '+40 745 857 479', call_path(phone_number: '+40745857479'), method: :post, data: { class: 'founders__phone', disable_with: 'Please wait ...', title: 'Call Calin' }
              - else
                +40 745 857 479
        .col-xs-12.col-sm-5.col-md-5.col-md-offset-0.col-lg-4.col-lg-offset-0
          .founders__right
            .founders__picture
              %img{:alt => 'Adrian Nistor', :height => '85', :src => image_path('common/profile-adi.png'), :width => '85'}
            .founders__contact
              %h3.founders__name Adi
              %span.founders__title Co-founder/developer
              %br
              - if user_signed_in?
                = link_to '+40 747 074 372', call_path(phone_number: '+40747074372'), method: :post, data: { class: 'founders__phone', disable_with: 'Please wait ...', title: 'Call Adi' }
