#contact.container-fluid
  .container.dark
    %h1 Get in contact with us
    .span5
      = form_for Message.new, :url => contact_index_url, :method => :post, :remote => true do |form|
        .control-group
          = form.label :name
          = form.text_field :name

        .control-group
          = form.label :email
          = form.email_field :email
          
        .control-group
          = form.label :body
          = form.text_area :body

        .control-group
          .controls
            = form.submit 'Contact Us', class: 'btn btn-purple'

    .span4
      %h2 Pop in for a chat
      %p You can meet us for a chat at our lovely office!
      %p Coffee's on us!
      %address
        %strong Omnipaste
        %br/
        Strada Avram Iancu, nr. 1-3, Ap. 5
        %br/
        Sibiu
        %br/
        %abbr{:title => "Phone"} P:
        +40745857479
      
      