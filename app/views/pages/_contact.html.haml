#contact.container-fluid
  .container.dark
    %h1 Get in contact with us
    .span5
      = simple_form_for :message, :url => contact_index_path, :method => :post, :remote => true do |f|
        = f.input :name
        = f.input :email
        = f.input :body, :as => :text, placeholder: 'You are awesome, give me a invite now!'

        .control-group
          .controls
            = f.submit 'Contact Us', class: 'btn btn-purple'

    .span4
      %h2 Pop in for a chat
      %p You can meet us for a chat at our lovely office!
      %p Coffee's on us!
      %address
        %strong Omnipaste
        %br/
        Strada Avram Iancu, nr. 1-3, Ap. 5
        %br/
        Sibiu
        %br/
        %abbr{:title => "Phone"} P:
        +40745857479